# NYT Article Explorer Environment Variables

# Database Configuration
DB_PATH=/var/www/html/database/nyt_explorer.sqlite

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRY=86400

# NYT API Configuration
NYT_API_KEY=your_nyt_api_key
NYT_API_BASE_URL=https://api.nytimes.com/svc/

# Cache Configuration
CACHE_DURATION=3600

# Rate Limiting Configuration
RATE_LIMIT_MAX_REQUESTS=5
RATE_LIMIT_WINDOW_MINUTES=5

# Logging Configuration
LOG_PATH=/var/www/html/logs/app.log
LOG_LEVEL=info  # Available levels: emergency, alert, critical, error, warning, notice, info, debug